{
    "compilerOptions": {                 
      "target": "es6",                               
      "module": "commonjs",                     
      "declaration": true,             
      "outDir": "./lib/",                    
      "strict": false,  
      "esModuleInterop": true,  
      "skipLibCheck": true,                           
      "forceConsistentCasingInFileNames": false,
      "suppressImplicitAnyIndexErrors": true,
      "ignoreDeprecations": "5.0"
    },
    "include": ["src/**/*.ts"]
  }